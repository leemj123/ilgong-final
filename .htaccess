# Apache 서버 설정 - .html 확장자 제거 및 URL 리라이트
# 일공 부동산 프로젝트

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 기존 .html URL을 확장자 없이 리다이렉트 (301 영구 리다이렉트)
    RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
    RewriteRule ^ /%1? [NC,L,R=301]

    # .html 확장자 없이 접근 시 .html 파일로 리라이트
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} !\.(css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot)$ [NC]
    RewriteRule ^([^\.]+)$ $1.html [NC,L]

    # 루트 경로 처리
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^$ index.html [L]
</IfModule>

# 보안 헤더 설정
<IfModule mod_headers.c>
    # XSS 보호
    Header set X-XSS-Protection "1; mode=block"
    
    # 콘텐츠 타입 스니핑 방지
    Header set X-Content-Type-Options "nosniff"
    
    # 클릭재킹 방지
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Referrer 정책
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CSP (Content Security Policy) - 필요시 조정
    # Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://maps.googleapis.com https://unpkg.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://maps.googleapis.com;"
</IfModule>

# 디렉토리 리스팅 방지
Options -Indexes

# 파일 접근 제한
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|env|config)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# 캐시 설정
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Gzip 압축
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>
